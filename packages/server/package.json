{
	"name": "@project-pokedex/server",
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"predev": "docker compose up -d",
		"dev": "tsx watch --env-file .env src/server.ts",
		"db:populate": "tsx --env-file .env src/scripts/populateDb.ts",
		"build": "tsup src",
		"start": "node dist/server.js",
		"lint": "eslint src --fix --ext .ts",
		"test": "vitest",
		"test:cov": "vitest run --coverage",
		"test:cov:staged": "vitest related --run --coverage"
	},
	"dependencies": {
		"axios": "^1.11.0",
		"axios-cache-interceptor": "^1.8.2",
		"celebrate": "^15.0.3",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"http-status-codes": "^2.3.0",
		"mongodb-memory-server": "^10.2.0",
		"mongoose": "^8.18.0",
		"morgan": "^1.10.1",
		"pino": "^9.9.0",
		"pino-pretty": "^13.1.1",
		"pokenode-ts": "^1.20.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.3.0",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"husky": "^9.1.7",
		"supertest": "^7.1.4",
		"tsup": "^8.5.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.4",
		"vitest": "^3.2.4"
	}
}
